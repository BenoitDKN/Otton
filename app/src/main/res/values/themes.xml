<resources xmlns:tools="http://schemas.android.com/tools">

    <style name="Theme.Otton" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/turquoise</item>
        <item name="colorPrimaryVariant">@color/turquoise</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/navy</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
    </style>
    <style name="toggl">
        <item name="android:thumbTint">?attr/colorPrimary</item>
        <item name="android:trackTint">?attr/colorSecondary</item>
        <item name="android:textSize">@dimen/toggle</item>
    </style>
    <style name="ottones">
        <item name="android:textColor">?attr/colorPrimary</item>
    </style>
</resources>